<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".myservice.ServiceActivity"
    android:paddingRight="5dp"
    android:paddingLeft="5dp">

    <Button
        android:id="@+id/btnStartActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1  startActivity"
        android:textSize="25sp"
        android:layout_marginTop="40dp"/>

    <Button
        android:id="@+id/btnStopActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2  stopActivity"
        android:textSize="25sp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/btnStartActivity"/>

    <Button
        android:id="@+id/btnBindActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3  bindActivity"
        android:textSize="25sp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/btnStopActivity"/>

    <Button
        android:id="@+id/btnUnBindActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4  unbindActivity"
        android:textSize="25sp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/btnBindActivity"/>


</RelativeLayout>